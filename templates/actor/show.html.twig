{% extends 'base.html.twig' %}

{% block title %}Actor
{% endblock %}

{% block body %}
	<main class="container_all_series">
		<div class="container">
			<div class="container_series">

				<h1 class="text-center mt-5 mb-5">Actor</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ actor.id }}</td>
						</tr>
						<tr>
							<th>Firstname</th>
							<td>{{ actor.firstname }}</td>
						</tr>
						<tr>
							<th>Lastname</th>
							<td>{{ actor.lastname }}</td>
						</tr>
						<tr>
							<th>Birth_date</th>
							<td>{{ actor.birthDate ? actor.birthDate|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>
				<h3 class="text-center mt-5 mb-5"> Série associées :</h3>
				<ul>
				{% for program in actor.programs %}
					<li><a href="#">{{ program.title}}</li>
				{% endfor %}
				</ul>
				<p class="text-center mt-5 mb-3">
					<a href="{{ path('app_actor_index') }}">back to list</a>
				</p>
				<p class="text-center mt-3 mb-5">
					<button class="btn btn-secondary btn-sm">
						<a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>
					</button>
					{{ include('actor/_delete_form.html.twig') }}
				</p>
			</div>
		</div>
	</main>
{% endblock %}
