{% extends 'base.html.twig' %}


{% block title %}Accueil Wild Series
{% endblock %}


{% block body %}

<div class="container_all_series">
    <main class="container">
		<div class="container_series">
			<h1 class="text-center mt-5 mb-5">A LA UNE</h1>
        {% for program in programs %}  
            <div>
                <h2 class="text-center mt-5 mb-2">
                    {{ program.title }} - {{ program.category.name }}
                </h2>
                <p class="text-center">
                    <a href="{{ path("program_show", { slug: program.slug }) }}">Voir en d√©tail</a>
                </p>
                <p class="text-center">
                    <img src="{{ program.poster }}" alt="{{ program.title }} poster" class="photo_serie"></p>
                <p class="text-center m-5">
                    {{ program.synopsis }}
                </p>
			</div>
        {% endfor %}
        </div>
    </main>
</div>
{% endblock %}
