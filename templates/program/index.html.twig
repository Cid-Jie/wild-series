{% extends 'base.html.twig' %}


{% block title %}All Programs{% endblock %}


{% block body %}
<main class="container_series">
    <div class="container">
        <h1 class="text-center mt-5 mb-5">Toutes les séries :</h1>
        {% for program in programs %}
            <div>
                <h2 class="text-center mt-5 mb-5"> {{ loop.index }} / {{ program.title }} - {{ program.category.name }} </h2>
                <p class="text-center"> <img src="{{ program.poster }}" alt="{{ program.title }} poster" class="photo_serie"></p> 
                <p> {{ program.synopsis }} </p>
                <a href="{{ path("program_show", { id: program.id } ) }}">Voir la fiche</a>
            </div>
        {% else %}
            <p class="text-center mt-5 mb-5"> Désolé, aucune série trouvée.</p>
        {% endfor %}

        <a href="{{ path('app_index') }}"> Retour à l'accueil</a>
    </div>
</main>
{% endblock %}